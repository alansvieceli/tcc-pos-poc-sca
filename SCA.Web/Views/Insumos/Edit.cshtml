@model SCA.Web.Models.ViewModels.InsumosViewModel

@{
    ViewData["Title"] = "Insumo - Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Cadastro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Insumo.Id" class="control-label"></label>
                <input asp-for="Insumo.Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Insumo.Marca" class="control-label"></label>
                <select asp-for="Insumo.MarcaId" asp-items="@(new SelectList(Model.Marcas,"Id", "Descricao"))" class="form-control">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="Insumo.MarcaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insumo.Tipo" class="control-label"></label>
                <select asp-for="Insumo.TipoId" asp-items="@(new SelectList(Model.Tipos,"Id", "Descricao"))" class="form-control">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="Insumo.TipoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insumo.Tipo" class="control-label"></label>
                <select asp-for="Insumo.Status" asp-items="Html.GetEnumSelectList<SCA.Shared.Entities.Enums.InsumosStatus>()" class="form-control">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="Insumo.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insumo.Descricao" class="control-label"></label>
                <input asp-for="Insumo.Descricao" class="form-control" />
                <span asp-validation-for="Insumo.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insumo.DataCadastro" class="control-label"></label>
                <input asp-for="Insumo.DataCadastro" class="form-control" readonly />
                <span asp-validation-for="Insumo.DataCadastro" class="text-danger" ></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
