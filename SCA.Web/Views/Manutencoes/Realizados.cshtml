@model IEnumerable<SCA.Shared.Entities.Maintenance.Manutencao>

@{
    ViewData["Title"] = "Manutenção - Realizados";
}

<h1>@ViewData["Title"]</h1>

<p>
    <i class="fas fa-search" aria-hidden="true"></i>
    <input class="form-control" id="buscar" type="text" placeholder="Pesquisar" aria-label="Pesquisar">
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-light">
            <th style="width: 30px">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Insumo.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoAgendamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicioManutencao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFimManutencao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="dados">
        @foreach (var item in Model)
        {
        <tr class="">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Insumo.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoAgendamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicioManutencao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFimManutencao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
