
@model SCA.Shared.Entities.Monitoring.Sensor
@using SCA.Shared.Utils;

@{
    ViewData["Title"] = Model.Descricao;
}

<h1>@ViewData["Title"] / Histórico</h1>

<p>
    <i class="fas fa-search" aria-hidden="true"></i>
    <input class="form-control" id="buscar" type="text" placeholder="Pesquisar" aria-label="Pesquisar">
</p>

@{
    var sensor = Model.Historico.FirstOrDefault();
    var historico = Model.GetHistoricoOrdenado();
}

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-light">
            <th style="width: 30px">
                @Html.DisplayNameFor(model => sensor.Id)
            </th>
            <th style="width: 230px">
                @Html.DisplayNameFor(model => sensor.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => sensor.Status)
            </th>
        </tr>
    </thead>
    <tbody id="dados">
        @foreach (var item in historico)
        {
            string style = Functions.GetStyleStatus(item.Status);
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td style="padding-left:30px;">
                    <div class="flag @style"></div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Voltar para lista de senores", "Details", "Barragem", new { id = Model.BarragemId })
</div>




