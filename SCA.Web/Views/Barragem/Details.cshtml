
@model SCA.Shared.Entities.Monitoring.Barragem

@{
    ViewData["Title"] = Model.Descricao;
}

<h1>@ViewData["Title"]</h1>

<p>
    <i class="fas fa-search" aria-hidden="true"></i>
    <input class="form-control" id="buscar" type="text" placeholder="Pesquisar" aria-label="Pesquisar">
</p>

@{var sensor = Model.Sensores.FirstOrDefault(); }

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-light">
            <th style="width: 30px">
                @Html.DisplayNameFor(model => sensor.Id)
            </th>
            <th style="width: 60%">
                @Html.DisplayNameFor(model => sensor.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => sensor.DataCadastro)
            </th>
            <th style="text-align: center">
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="dados">
        @foreach (var item in Model.Sensores)
        {
            string style = "flag_red";
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td style="text-align: center">
                    <div class="flag @style"></div>
                </td>
                <td>
                    @Html.ActionLink("Histórico", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Voltar", "Index", "Monitoramento")
</div>




